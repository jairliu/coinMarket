<idea-plugin version="2">
    <id>coinMarket.CoinMarket</id>
    <name>coinMarket</name>
    <version>1.0</version>
    <vendor url="https://github.com/krasa/CpuUsageIndicator" email="vojta.krasa@gmail.com">Vojtech Krasa</vendor>

    <description><![CDATA[
      CPU Usage Indicator in the status bar, just like the Memory Indicator.<br/>
    ]]></description>

    <idea-version since-build="172.450"/>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable id="CoinMarketSettings" displayName="CoinMarketSettings"
                                 instance="market.PerformanceWatcherConfigurable"/>
    </extensions>

    <actions>
        <action id="LogAction" class="market.LogAction" text="LogAction" description="LogAction">
        </action>
    </actions>

    <project-components>
        <component>
            <implementation-class>market.CoinMarketComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>